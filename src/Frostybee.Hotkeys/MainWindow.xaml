<Window
    x:Class="Frostybee.Hotkeys.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fb="clr-namespace:Frostybee.Hotkeys.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Frostybee.Hotkeys"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Hotkeys Editor"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <fb:HotKeyEditorControl
                Width="200"
                Height="40"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                IsReadOnly="True"
                MinAllowedModifiersKeys="CtrlShift"
                IsReadOnlyCaretVisible="True"                
                IsUndoEnabled="False" />
        </StackPanel>
    </Grid>
</Window>
